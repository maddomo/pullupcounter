generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
    schemas = ["public"]
}

model PullupSession {
  id         Int      @id @default(autoincrement())
  count      Int
  createdAt  DateTime @default(now())
  deviceId   String?
  userId     String   // referenziert Supabase auth.users.id (UUID)
  user       UserProfile  @relation(fields: [userId], references: [id])

  @@index([userId])
  @@schema("public")
}

model UserProfile {
  id             String          @id // gleiche UUID wie in auth.users.id
  email          String?         @unique
  displayName    String?
  createdAt      DateTime        @default(now())
  pullupSessions PullupSession[]
  @@schema("public")
}